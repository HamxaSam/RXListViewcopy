<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:layout_margin="5dp"    android:orientation="vertical"    tools:context=".Activities.test">    <Button        android:id="@+id/notificat"        android:text="Notification"        android:layout_width="match_parent"        android:layout_height="wrap_content"/>    <Button        android:id="@+id/pickpicture"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="Pick Picture"        android:textAllCaps="false" />    <Button        android:id="@+id/upload"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="Upload"        android:textAllCaps="false"/>   <Button        android:id="@+id/periodic"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="Periodic"        android:textAllCaps="false"/></LinearLayout>