<?xml version="1.0" encoding="utf-8"?><LinearLayout    android:orientation="vertical"    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".Activities.MainActivity"> <LinearLayout     android:id="@+id/linear"     android:orientation="horizontal"     android:layout_height="?attr/actionBarSize"     android:layout_width="match_parent"     android:background="@android:color/black"     >  <ImageButton      android:id="@+id/btn_extra"      android:background="@android:color/transparent"      android:src="@drawable/ic_extra"      android:layout_width="wrap_content"      android:layout_weight=".5"      android:layout_height="match_parent" />  <TextView      android:id="@+id/txt_title"      android:layout_weight="4.5"      android:text="Dash Board"      android:textStyle="bold"      android:gravity="center"      android:textColor="@android:color/white"      android:layout_width="0dp"      android:layout_height="match_parent" />  <ImageButton      android:visibility="gone"      android:id="@+id/btn_search"      android:background="@android:color/transparent"      android:src="@drawable/ic_search"      android:layout_width="wrap_content"      android:layout_weight=".5"      android:layout_height="match_parent" /> </LinearLayout>  <include layout="@layout/content_main"/></LinearLayout>