<?xml version="1.0" encoding="utf-8"?><LinearLayout    android:orientation="vertical"    android:background="@android:color/darker_gray"    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"    android:layout_height="match_parent">    <LinearLayout        android:weightSum="3"        android:background="@android:color/black"        android:layout_width="match_parent"        android:layout_height="45dp">     <Button         android:id="@+id/btn_first"         android:text="cloths"         android:textColor="@android:color/white"         android:background="@android:color/transparent"         android:layout_width="0dp"         android:layout_weight="1"         android:layout_height="match_parent" />    <Button        android:id="@+id/btn_second"        android:text="shoes"        android:textColor="@android:color/white"        android:background="@android:color/transparent"        android:layout_width="0dp"        android:layout_weight="1"        android:layout_height="match_parent" />    <Button        android:id="@+id/btn_third"        android:text="purse"        android:textColor="@android:color/white"        android:background="@android:color/transparent"        android:layout_width="0dp"        android:layout_weight="1"        android:layout_height="match_parent" />    </LinearLayout>    <FrameLayout        android:id="@+id/content_fram"        android:layout_width="match_parent"        android:layout_height="match_parent"/></LinearLayout>