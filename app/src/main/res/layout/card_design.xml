<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_margin="2dp"    android:layout_height="200dp"><androidx.cardview.widget.CardView    app:cardCornerRadius="5dp"    android:layout_width="match_parent"    android:layout_height="match_parent"><LinearLayout    android:id="@+id/linear"    android:orientation="vertical"    android:layout_width="match_parent"    android:layout_height="210dp">  <androidx.constraintlayout.widget.ConstraintLayout      android:layout_width="match_parent"      android:layout_height="wrap_content">      <ImageView          android:id="@+id/img_prd"          android:layout_width="match_parent"          android:layout_height="150dp"          android:scaleType="fitXY"          android:background="@mipmap/eror"          app:layout_constraintEnd_toEndOf="parent"          app:layout_constraintStart_toStartOf="parent"          app:layout_constraintTop_toTopOf="parent" />      <com.like.LikeButton          android:id="@+id/btn_like"          android:layout_width="40dp"          app:icon_size="20dp"          android:layout_height="40dp"          android:background="@drawable/circle"          android:layout_margin="7dp"          app:like_drawable="@mipmap/heart"          app:unlike_drawable="@mipmap/unlike"          app:is_enabled="true"          app:layout_constraintEnd_toEndOf="parent"          app:layout_constraintTop_toTopOf="parent" />  </androidx.constraintlayout.widget.ConstraintLayout>    <TextView        android:id="@+id/txt_pname"        android:text="Shirts "        android:textSize="15dp"        android:maxLines="1"        android:layout_marginLeft="10dp"        android:maxLength="20"        android:textColor="@android:color/white"        android:layout_width="match_parent"        android:layout_height="wrap_content" />    <LinearLayout        android:layout_marginBottom="2dp"        android:weightSum="2"        android:layout_marginLeft="10dp"        android:orientation="horizontal"        android:layout_width="match_parent"        android:layout_height="wrap_content">        <TextView            android:id="@+id/txt_price"            android:text="3000 $"            android:textColor="@android:color/white"            android:layout_width="0dp"            android:maxLength="6"            android:maxLines="1"            android:layout_weight="1"            android:layout_height="wrap_content" />        <TextView            android:id="@+id/txt_likes"            android:text="like"            android:layout_marginEnd="10dp"            android:gravity="right|center"            android:textColor="@android:color/white"            android:layout_width="0dp"            android:drawableRight="@mipmap/heart"            android:maxLength="6"            android:drawablePadding="5dp"            android:maxLines="1"            android:layout_weight="1"            android:layout_height="wrap_content"            android:layout_marginRight="10dp" />    </LinearLayout></LinearLayout></androidx.cardview.widget.CardView></LinearLayout>