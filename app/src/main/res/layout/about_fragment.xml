<?xml version="1.0" encoding="utf-8"?><RelativeLayout android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@android:color/transparent"    xmlns:android="http://schemas.android.com/apk/res/android"><ScrollView    android:layout_width="match_parent"    android:layout_height="match_parent">    <LinearLayout        xmlns:android="http://schemas.android.com/apk/res/android"        xmlns:app="http://schemas.android.com/apk/res-auto"        xmlns:tools="http://schemas.android.com/tools"        android:layout_width="match_parent"        android:orientation="vertical"        android:layout_height="match_parent"        tools:context=".Fragments.MainFragment">        <ImageView            android:layout_marginTop="30dp"            android:layout_gravity="center"            android:background="@mipmap/logo"            android:layout_width="100dp"            android:layout_height="100dp" />        <LinearLayout            android:orientation="vertical"            android:layout_marginTop="30dp"            android:layout_marginLeft="30dp"            android:layout_width="match_parent"            android:layout_height="wrap_content">            <TextView                android:id="@+id/txt_call"                android:text="Call Us"                android:drawablePadding="5dp"                android:drawableLeft="@drawable/ic_call"                android:textSize="20dp"                android:textColor="@android:color/black"                android:layout_width="match_parent"                android:layout_height="wrap_content" />            <View                android:layout_marginTop="15dp"                android:layout_marginBottom="15dp"                android:layout_width="match_parent"                android:background="@android:color/darker_gray"                android:layout_height="1dp"/>            <TextView                android:id="@+id/txt_email"                android:text="Email"                android:drawablePadding="5dp"                android:drawableLeft="@drawable/ic_contact_mail"                android:textSize="20dp"                android:textColor="@android:color/black"                android:layout_width="match_parent"                android:layout_height="wrap_content" />            <View                android:layout_marginTop="15dp"                android:layout_marginBottom="15dp"                android:layout_width="match_parent"                android:background="@android:color/darker_gray"                android:layout_height="1dp"/>            <TextView                android:id="@+id/txt_web"                android:text="Website"                android:drawablePadding="5dp"                android:drawableLeft="@drawable/ic_web"                android:textSize="20dp"                android:textColor="@android:color/black"                android:layout_width="match_parent"                android:layout_height="wrap_content" />            <View                android:layout_marginTop="15dp"                android:layout_marginBottom="15dp"                android:layout_width="match_parent"                android:background="@android:color/darker_gray"                android:layout_height="1dp"/>            <TextView                android:id="@+id/txt_dev"                android:text="Developer Contact "                android:drawablePadding="5dp"                android:drawableLeft="@drawable/ic_about"                android:textSize="20dp"                android:textColor="@android:color/black"                android:layout_width="match_parent"                android:layout_height="wrap_content" />            <View                android:layout_marginTop="15dp"                android:layout_marginBottom="15dp"                android:layout_width="match_parent"                android:background="@android:color/darker_gray"                android:layout_height="1dp"/>        </LinearLayout>    </LinearLayout></ScrollView></RelativeLayout>